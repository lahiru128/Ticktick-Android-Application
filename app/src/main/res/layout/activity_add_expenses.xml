<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpenses">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/ic_wave_ex"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/inputIncomes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center"
            android:text="@string/input_expenses"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@mipmap/sadicon" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/expenseNameAdd"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/formex"
            android:gravity="center"
            android:hint="@string/add_name"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="#8D3F51B5" />

        <EditText
            android:id="@+id/expenseAmountAdd"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/formex"
            android:gravity="center"
            android:hint="@string/add_amount"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"
            android:textColorHint="#8D3F51B5" />

        <EditText
            android:id="@+id/expenseNoteAdd"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/formex"
            android:gravity="center"
            android:hint="@string/add_note"
            android:inputType="textMultiLine"
            android:paddingLeft="15dp"
            android:textColorHint="#8D3F51B5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/expensesSaveBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/saveex"
                android:text="@string/save"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/expensesCancelBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="70dp"
                android:background="@mipmap/cancelicon"
                android:text="@string/cancel"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>