<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity">

    <RelativeLayout
        android:id="@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:background="#9178FA"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loans and Lendings"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/rL2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#8AC7DB"
    android:layout_below="@+id/rL1"
    android:layout_marginTop="10dp"
    >

        <TextView
            android:id="@+id/totalLoansTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Of Loans :"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/totalLendingsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalLoansTxt"
            android:text="Total Of Lendings :"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/balanceTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalLendingsTxt"
            android:text="Balance :"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/rL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rL2"
        android:layout_marginTop="100dp"
        >

        <Button
            android:id="@+id/finalLoansBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/loan_update_btn"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:text="Loans"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/finalLendingsBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/cancel_btn"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:text="Lendings"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16dp"
            />
    </RelativeLayout>

</RelativeLayout>